<h2>Contact me</h2>
<form enctype="multipart/form-data" action="/contact/send-message" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="fileName" accept=".png, .jpg, .jpeg, .gif">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <div>
    <button type="submit">Send message</button>
  </div>  
</form>
{{#if isSent}}
  <div class="isSent">
    <p>The message has been sent! File {{fileName}} has been saved</p>
    <img src="../public/uploadImage">
  </div>
{{/if}}
{{#if isError}}
  <div class="isError">You can\'t leave fields empty!</div>
{{/if}}